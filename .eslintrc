{
  "parser": "babel-eslint",
  "plugins": ["flowtype", "react", "import"],
  "rules": {
    "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
    "import/named": 2,
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 2
      }
    ],
    "object-curly-spacing": [2, "always"],
    "space-before-blocks": [2, "always"],
    "react/jsx-uses-react": "error",
    "react/prop-types": "error",
    "react/jsx-uses-vars": "error",
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-infix-ops": [
      2,
      {
        "int32Hint": false
      }
    ],
    "space-in-parens": [2, "never"],
    "no-redeclare": [
      2,
      {
        "builtinGlobals": true
      }
    ],
    "array-bracket-spacing": [2, "never"],
    "spaced-comment": 2,
    "no-multi-spaces": 0,
    "no-unused-vars": 2,
    "no-undef": 2,
    "key-spacing": [
      0,
      {
        "beforeColon": false,
        "afterColon": false
      }
    ],
    "no-alert": 0,
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"],
    "flowtype/define-flow-type": 1
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "destructuring": true,
      "jsx": true,
      "spread": true
    }
  }
}
